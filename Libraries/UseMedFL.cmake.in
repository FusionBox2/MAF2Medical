# Description:
# This module add the MFL include paths to a project
# It should be included after the FindMFL module. It works
# also if included from within the MFL build tree
#

SET(MED_USE_Offis @MED_USE_Offis@)


#
# Offis library
#
IF (MED_USE_Offis)
  SET(DCMTK_DIR @DCMTK_DIR@)
  find_package(DCMTK REQUIRED)
  INCLUDE(${DCMTK_CONFIG})
  LINK_DIRECTORIES(${DCMTK_DIR}/lib)
ENDIF (MED_USE_Offis)

#
# BTK library
#
SET(MED_USE_BTK @MED_USE_BTK@)
IF (MED_USE_BTK)
  SET(BTK_DIR @BTK_DIR@)
  find_package(BTK REQUIRED)
  INCLUDE(${BTK_CONFIG})
  INCLUDE(${BTK_USE_FILE})
  LINK_LIBRARIES(${BTK_LIBRARIES})
ENDIF (MED_USE_BTK)

